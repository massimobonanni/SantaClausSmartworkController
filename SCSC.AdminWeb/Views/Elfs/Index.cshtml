@model SCSC.AdminWeb.Models.Elfs.IndexViewModel
@{
    ViewData["Title"] = "Elfs Management";
}

<h2>Elfs Management</h2>
<br />
<form class="border">
    <div class="form-row">
        <div class="form-group col">
            <label for="filterFirstName">Elf Name</label>
            <input type="text" class="form-control" id="filterName" name="filterName" placeholder="elf name" value="@Model.FilterName">
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
</form>
<br />
<table class="table">
    <thead>
        <tr>
            <td>Name</td>
            <td>Last Update</td>
            <td>Work Time</td>
            <td>Daily<br/>Packages</td>
            <td>Daily Prod.<br/>(packs/hour)</td>
            <td>Last Hour Prod.<br/>(packs/hour)</td>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Elfs)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.LastUpdate.ToLocalTime().ToString(@"dd/MM/yyyy HH:mm:ss")</td>
                <td>@item.StartWorkTime.ToString(@"hh\:mm") - @item.EndWorkTime.ToString(@"hh\:mm")</td>
                <td>@item.PackagesToday</td>
                <td>@item.DailyProductivity.ToString("##0.00")</td>
                <td>@item.LastHourProductivity.ToString("##0.00")</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Alerts", "Index","Alerts", new { elfId = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
